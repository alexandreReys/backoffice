generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  password      String
  socialId      String    @default("")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  permissions   Json      @default("[]")
  photoUrl      String?
  emailVerified DateTime?

  @@map("users")
}
